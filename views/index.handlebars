<h1>Burger!</h1>

<h2>Devour it!</h2>

<ul>
  {{#each Burger}}
    {{#unless Devour}}
      {{> devour/devour-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eat-Da-Burger!</h2>

<ul>
  {{#each Burger}}
    {{#if devour}}
      {{> Burger/burger-block devour it=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devour?</label><br>
    <input type="radio" name="devour" value="1" checked> Devoured!<br>
    <input type="radio" name="devour" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>
